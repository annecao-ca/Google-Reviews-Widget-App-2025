{
  "name": "saas-google-reviews-widget-ai",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "backend",
    "frontend/dashboard",
    "frontend/embed"
  ],
  "scripts": {
    "install:all": "npm install && npm install --workspace=backend && npm install --workspace=frontend/dashboard && npm install --workspace=frontend/embed",
    "build:embed": "cd frontend/embed && npm run build",
    "build:dashboard": "cd frontend/dashboard && npm run build",
    "build:backend": "cd backend && npm run build",
    "build": "npm run build:embed && npm run build:dashboard && npm run build:backend",
    "dev:backend": "cd backend && npm run dev",
    "dev:dashboard": "cd frontend/dashboard && npm run dev",
    "dev:embed": "cd frontend/embed && npm run dev",
    "start": "cd backend && npm run start"
  },
  "devDependencies": {
    "csstype": "^3.2.3",
    "form-data": "^4.0.5",
    "typescript": "^5.5.3",
    "undici-types": "^7.16.0"
  }
}