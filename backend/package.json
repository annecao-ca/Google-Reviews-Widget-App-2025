{
  "name": "backend",
  "version": "0.1.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "npx prisma generate && tsc -p tsconfig.json || true && mkdir -p dist && (test -f dist/backend/src/index.js && cp dist/backend/src/index.js dist/index.js || test -f dist/src/index.js && cp dist/src/index.js dist/index.js || echo 'Warning: index.js not found in expected locations')",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^6.19.1",
    "cors": "^2.8.5",
    "cross-fetch": "^4.0.5",
    "dotenv": "^16.4.6",
    "express": "^4.19.2",
    "node-cron": "^3.0.2",
    "openai": "^4.4.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/node": "^20.8.3",
    "@types/node-cron": "^3.0.11",
    "prisma": "^6.19.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.3"
  }
}